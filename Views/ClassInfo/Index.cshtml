@model List<test.Entity.ClassInfo>

<div class="container">
    <a asp-controller="ClassInfo" asp-action="Create" class="btn btn-primary">Create</a>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a asp-controller="ClassInfo" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>