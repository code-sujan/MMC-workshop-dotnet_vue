@model StudentVm

<div class="container d-flex justify-content-center">
    <form class="w-50" method="post">
        <div class="form-group">
            <label class="form-label" asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control">
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="Address"></label>
            <input type="text" asp-for="Address" class="form-control">
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="ContactNo"></label>
            <input type="text" asp-for="ContactNo" class="form-control">
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="ClassInfoId"></label>
            <select asp-for="ClassInfoId" class="form-control" asp-items="Model.ClassOptions">
            </select>
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="FacultyId"></label>
            <select asp-for="FacultyId" class="form-control" asp-items="Model.FacultyOptions">
            </select>
        </div>
        <button type="submit" class="mt-5 btn btn-primary btn-sm">Create</button>
    </form>
</div>